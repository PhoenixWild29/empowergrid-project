# EmpowerGRID Mobile App Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_BASE_URL=http://localhost:3000/api

# Wallet Configuration
SOLANA_NETWORK=mainnet-beta
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# App Configuration
APP_NAME=EmpowerGRID
APP_VERSION=1.0.0

# Expo Configuration (Required for EAS Build)
EXPO_TOKEN=your_expo_token_here

# iOS Deployment (Required for App Store submission)
APPLE_ID=your-apple-id@example.com
APPLE_PASSWORD=your-app-specific-password
APP_STORE_ID=your-app-store-connect-app-id
APPLE_TEAM_ID=your-apple-developer-team-id

# Android Deployment (Required for Google Play submission)
# Place your Google Service Account JSON key file in the mobile directory
# as 'google-service-account-key.json'

# Optional: Analytics
ANALYTICS_ENABLED=true
ANALYTICS_KEY=your_analytics_key

# Optional: Push Notifications
EXPO_ACCESS_TOKEN=your_expo-access-token

# Optional: Development
NODE_ENV=development
DEBUG=true